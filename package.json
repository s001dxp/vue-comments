{
  "name": "@x-store/vue-comments",
  "version": "0.1.16",
  "description": "A comments component for Vue.js 3",
  "author": "Evgeniy Saschenko<evgeniy.saschenko@gmail.com>",
  "repository": "https://github.com/EvgeniySaschenko/vue-comments",
  "homepage": "https://vue-comments.ua-ix.biz",
  "main": "dist/vue-comments.umd.js",
  "module": "dist/vue-comments.esm.js",
  "unpkg": "dist/vue-comments.min.js",
  "browser": {
    "./sfc": "src/components/comments/vue-comments.vue"
  },
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build --dest=dist-demo",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "lib": "vue-cli-service build --dest=dist --target lib --name vue-comments src/lib.js && npm run build"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "is-touch-device": "^1.0.1",
    "lodash.debounce": "^4.0.8",
    "vue": "^3.0.0",
    "vue-cookies": "^1.7.4",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "babel-eslint": "^10.1.0",
    "bemto.pug": "^2.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.0.0",
    "fs-extra": "^10.0.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.2",
    "pug-plain-loader": "^1.1.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "typescript": "~3.9.3",
    "vue-jest": "^5.0.0-0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "prefer-const": "off",
      "no-unused-vars": "warn",
      "unicorn/error-message": "off",
      "eqeqeq": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "vue-jest": {
        "pug": {
          "basedir": "./"
        }
      }
    }
  },
  "keywords": [
    "comments",
    "vue-comments",
    "discussion",
    "vue comments",
    "vue"
  ],
  "license": "MIT"
}
