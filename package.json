{
  "name": "@x-store/vue-comments",
  "version": "0.1.16",
  "description": "A comments component for Vue.js 3",
  "author": "Evgeniy Saschenko<evgeniy.saschenko@gmail.com>",
  "repository": "https://github.com/EvgeniySaschenko/vue-comments",
  "homepage": "https://vue-comments.ua-ix.biz",
  "main": "dist/vue-comments.umd.js",
  "module": "dist/vue-comments.esm.js",
  "unpkg": "dist/vue-comments.min.js",
  "browser": {
    "./sfc": "src/components/comments/vue-comments.vue"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --outDir=dist-demo",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "lib": "vite build --mode lib --outDir=dist && npm run build"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "pinia": "^2.1.7",
    "vue-cookies": "^1.8.3",
    "lodash-es": "^4.17.21",
    "is-touch-device": "^1.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.5",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.24.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "typescript": "^5.4.3",
    "@types/lodash-es": "^4.17.12",
    "pug": "^3.0.2",
    "@vitejs/plugin-legacy": "^5.3.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "prefer-const": "off",
      "no-unused-vars": "warn",
      "unicorn/error-message": "off",
      "eqeqeq": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "vue-jest": {
        "pug": {
          "basedir": "./"
        }
      }
    }
  },
  "keywords": [
    "comments",
    "vue-comments",
    "discussion",
    "vue comments",
    "vue"
  ],
  "license": "MIT"
}
